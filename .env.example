# Agent Application Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_USERNAME=agent
DB_PASSWORD=your_secure_db_password_here
DATABASE_URL=jdbc:postgresql://postgres:5432/agentdb

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_that_must_be_at_least_256_bits_long_for_security
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# LLM Provider Configuration
OPENAI_ENABLED=false
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

ANTHROPIC_ENABLED=false
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1

OLLAMA_ENABLED=true
OLLAMA_BASE_URL=http://ollama:11434

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here
GRAFANA_SECRET_KEY=your_grafana_secret_key_here

# Application Configuration
ENVIRONMENT=production
APP_VERSION=1.0.0
SERVER_PORT=8080

# Token Limits
MAX_TOKENS_PER_REQUEST=4000
MAX_TOKENS_PER_CONVERSATION=50000
MAX_TOKENS_PER_DAY=100000

# Memory Configuration
MEMORY_SHORT_TERM_ENABLED=true
MEMORY_LONG_TERM_ENABLED=true
MEMORY_SHORT_TERM_TTL=60
MEMORY_MAX_CONVERSATION_HISTORY=100

# Tools Configuration
TOOLS_ENABLED_BY_DEFAULT=true
TOOLS_TIMEOUT_SECONDS=30

# Monitoring Thresholds
ALERT_ERROR_RATE=0.05
ALERT_RESPONSE_TIME_MS=5000
ALERT_MEMORY_USAGE_PERCENT=85

# Tracing Configuration
TRACING_SAMPLING_RATE=0.01
ZIPKIN_ENDPOINT=http://zipkin:9411/api/v2/spans